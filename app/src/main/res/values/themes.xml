<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Freebloks.Base" parent="Theme.Material3.DayNight" >
        <item name="actionBarStyle">@style/Widget.ActionBar.Surface.Elevated</item>

        <item name="android:alertDialogTheme">@style/Theme.Freebloks.Dialog.Alert</item>
        <item name="materialAlertDialogTheme">@style/Theme.Freebloks.Dialog.Alert</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="Theme.Freebloks" parent="Theme.Freebloks.Base">

    </style>

    <style name="Theme.Freebloks.Game">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Freebloks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Freebloks.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">@dimen/dialog_corner_radius</item>

        <item name="windowMinWidthMajor">10%</item>
        <item name="windowMinWidthMinor">10%</item>
    </style>

    <style name="Theme.Freebloks.Dialog.MinWidth">
        <item name="windowMinWidthMajor">@dimen/abc_dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@dimen/abc_dialog_min_width_minor</item>
    </style>

    <style name="Theme.Freebloks.Dialog.Alert" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">@dimen/dialog_corner_radius</item>
    </style>
</resources>
