<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="TextAppearance.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="TextAppearance.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="Widget.ActionBar.Surface.Elevated" parent="@style/Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">?colorSurface</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="PillButton" parent="">
        <item name="android:layout_width">@dimen/pill_button_size</item>
        <item name="android:layout_height">@dimen/pill_button_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/pill_button_background</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="PillButton.Large">
        <item name="android:layout_width">@dimen/pill_button_size_large</item>
        <item name="android:layout_height">@dimen/pill_button_size_large</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="IconButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">6dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>

    </style>

</resources>
