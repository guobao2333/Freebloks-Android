<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <de.saschahlusiak.freebloks.view.Freebloks3DView
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuOverlayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/statusRow">

        <LinearLayout
            android:id="@+id/soundContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/menuContainer"
            android:alpha="0.75"
            android:background="@drawable/pill_background"
            android:elevation="6dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/soundOnOff"
                style="@style/PillButton"
                android:src="@drawable/ic_volume_up" />

            <ImageButton
                android:id="@+id/hintButton"
                style="@style/PillButton"
                android:src="@drawable/ic_info" />

            <ImageButton
                android:id="@+id/undoButton"
                style="@style/PillButton"
                android:src="@drawable/ic_undo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="6dp"
            android:alpha="0.75"
            android:background="@drawable/pill_background"
            android:elevation="6dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/menuButton"
                style="@style/PillButton"
                android:src="@drawable/ic_more_vertical" />

            <ImageButton
                android:id="@+id/newGameButton"
                style="@style/PillButton"
                android:src="@drawable/ic_new_game" />

            <ImageButton
                android:id="@+id/preferencesButton"
                style="@style/PillButton"
                android:src="@drawable/ic_settings" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/myLocationContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/chatButtonContainer"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="12dp"
            android:alpha="0.75"
            android:background="@drawable/pill_background">

            <ImageButton
                android:id="@+id/myLocation"
                style="@style/PillButton.Large"
                android:src="@drawable/ic_my_location" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/chatButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp"
            android:alpha="0.75"
            android:background="@drawable/pill_background">

            <ImageButton
                android:id="@+id/chatButton"
                style="@style/PillButton.Large"
                android:src="@drawable/ic_chat" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/statusRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>